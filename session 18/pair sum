#include <iostream>
#include <vector>
#include <algorithm> 

using namespace std;

void find_pairs(vector<int> &nums1,vector<int> &nums2, int k){
    sort(nums1.begin() , nums1.end());
    bool found = false;
    std::cout << "Pairs found (arr1_element, arr2_element): \n";
    
    for(int x : nums2){
        int t = k - x;

        auto lb = lower_bound(nums1.begin(),nums1.end(),t);
        auto ub = upper_bound(nums1.begin(),nums1.end(),t);
        if(lb != nums1.end() && *lb == t){
            int count = ub - lb;
            for (int i = 0; i < count; i++) {
                std::cout << "(" << t << ", " << x << ")" <<" , ";
                found = true;
            }

        }

        
    }

    cout << "\n";
    
    if (!found) {
        std::cout << "No pairs found!" << std::endl;
    }
}

int main() {
    
    std::vector<int> arr1 = {1, 5, 7, -1, 5}; 
    std::vector<int> arr2 = {3, 4, 7, 2, 4};
    int k = 9;

    std::cout << "Target Sum: " << k << "\n-------------------\n";
    find_pairs(arr1, arr2, k);

    return 0;
}
