class Solution {
public:
    long long check_time(vector<int>& piles , int k){
        long long total = 0;
        for(int x : piles){
            int t = ceil((double)x/k);
            total+=t;
        }

        return total;
    }
    int minEatingSpeed(vector<int>& piles, int h) {
        
        int low = 1;
        int high = *max_element(piles.begin(),piles.end());
        while(low < high){
            int mid = (high - low)/2 + low;
            int currtime = check_time(piles,mid);
            if(currtime <= h){
                high = mid;
            }
            else{
                low = mid + 1;
            }
        }
        return low;
    }
};
